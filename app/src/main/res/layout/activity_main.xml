<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="#f5253390">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TabHost
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </HorizontalScrollView>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" />
                </HorizontalScrollView>

                <TextView
                    android:text="Визначні місця"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/atract" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <FrameLayout
                        android:id="@android:id/tabcontent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/attraction"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/kafe"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/recretion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </TabHost>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:text="Високий замок"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Screenshot_1" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:text="Мега оперний театр"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/opernuy"
                android:paddingLeft="15dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:text="Ратуша"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ratusha" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:text="Високий замок"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Screenshot_1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:text="Високий замок"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Screenshot_1" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:text="Дуже Високий замок"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Screenshot_1" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:text="   Високий замок"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/Screenshot_1" />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>