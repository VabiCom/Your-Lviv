<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.i1.test_9.MainActivity"
    android:background="#233b81">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:text="Високий замок"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/zamok"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:text=" оперний театр"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/opera_80"
                android:paddingLeft="15dp"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:text="Ратуша"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ratusha"
                />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:text="Дім вчених"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dim_80x60"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:text="Церква Ольги та Єлизавети"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/olga"
                />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:text="Успенська церква"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/cobor"
                />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:text="латинський собор  "
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/latt"
                />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:text="   аптека-музей"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/apteka"
                android:layout_weight="0.01"
                />

        </LinearLayout>
    </ScrollView>


</RelativeLayout>
