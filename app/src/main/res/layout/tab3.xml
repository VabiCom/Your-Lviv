<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.i1.test_9.MainActivity"
    android:background="#233b81">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:text="готель панорама"
                android:gravity="center_horizontal|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/panorama"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:text="готель жорж"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/jorg"
                android:paddingLeft="15dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:text="готель варшава"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/warshava" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:text="готель LH Hotel and SPA"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lh1" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:text="готель купава"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/kupava" />

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:text="готель львів"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/lviv111" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:text="   готель дністер"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dnister"/>

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:text="   готель леополіс"
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/leo"/>
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:text="ГОТЕЛЬ ВЕНА "
                android:gravity="center|center_vertical"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/vena"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" />

        </LinearLayout>
    </ScrollView>



</RelativeLayout>